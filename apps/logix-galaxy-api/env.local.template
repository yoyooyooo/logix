# Copy this file to `.env.local` (gitignored) and fill in real values.

PORT=5500

# Postgres
DATABASE_URL='postgres://postgres:<password>@127.0.0.1:7001/postgres'

# BetterAuth (must be reachable by your client)
BETTER_AUTH_URL='http://127.0.0.1:5500'
# Must be >= 32 chars
BETTER_AUTH_SECRET='replace-with-a-long-random-secret'
# '0' to disable; default enabled
BETTER_AUTH_AUTO_MIGRATE='1'

# Auto seed admin on startup (local dev only)
LOGIX_GALAXY_AUTO_SEED_ADMIN='1'

# '0' to disable; default enabled
LOGIX_GALAXY_AUTO_MIGRATE_PROJECT_RBAC='1'

# Seed admin (optional)
ADMIN_EMAIL='admin@example.com'
ADMIN_PASSWORD='admin123456'
ADMIN_NAME='Admin'
