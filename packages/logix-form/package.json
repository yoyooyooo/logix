{
  "name": "@logixjs/form",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "description": "Form domain package for Logix v3 Trait system",
  "files": [
    "dist/**"
  ],
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts",
    "./react": "./src/react/index.ts",
    "./*": "./src/*.ts",
    "./internal/*": null
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./react": {
        "types": "./dist/react/index.d.ts",
        "import": "./dist/react/index.js",
        "require": "./dist/react/index.cjs"
      },
      "./*": {
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js",
        "require": "./dist/*.cjs"
      },
      "./internal/*": null
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "tsup --format cjs,esm --dts",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "test": "vitest run",
    "test:changed": "vitest run --changed",
    "test:cache": "vitest run --cache",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@logixjs/core": "workspace:*",
    "@logixjs/react": "workspace:*",
    "effect": "^3.19.8"
  },
  "devDependencies": {
    "@effect/vitest": "^0.27.0",
    "@types/react": "^19.2.2",
    "react": "^19.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "@logixjs/core": "workspace:*",
    "effect": "^3.19.8",
    "react": ">=18.0.0"
  }
}
