{
  "name": "@logix/react",
  "version": "0.1.0",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts",
    "./*": "./src/*.ts",
    "./internal/*": null
  },
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.test.json --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit"
  },
  "dependencies": {
    "@logix/core": "workspace:*",
    "@testing-library/react": "^16.0.1",
    "effect": "^3.19.8",
    "jsdom": "24.0.0",
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/use-sync-external-store": "^1.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vitest": "^4.0.15"
  }
}
