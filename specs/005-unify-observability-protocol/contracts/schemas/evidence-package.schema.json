{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/005-unify-observability-protocol/schemas/evidence-package.schema.json",
  "title": "EvidencePackage",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion", "runId", "createdAt", "source", "events"],
  "properties": {
    "protocolVersion": { "type": "string", "minLength": 1 },
    "runId": { "type": "string", "minLength": 1 },
    "createdAt": { "type": "number" },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["host"],
      "properties": {
        "host": { "type": "string", "minLength": 1 },
        "label": { "type": "string" }
      }
    },
    "events": {
      "type": "array",
      "items": { "$ref": "./observation-envelope.schema.json" }
    },
    "summary": { "$ref": "./json-value.schema.json" }
  }
}
