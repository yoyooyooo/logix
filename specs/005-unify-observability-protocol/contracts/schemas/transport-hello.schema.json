{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/005-unify-observability-protocol/schemas/transport-hello.schema.json",
  "title": "TransportHello",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "payload"],
  "properties": {
    "type": { "const": "HELLO" },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["protocolVersion", "runId", "capabilities"],
      "properties": {
        "protocolVersion": { "type": "string", "minLength": 1 },
        "runId": { "type": "string", "minLength": 1 },
        "lastSeq": { "type": "integer", "minimum": 0 },
        "capabilities": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "supportsSubscribe": { "type": "boolean" },
            "supportsBatch": { "type": "boolean" },
            "supportsControl": { "type": "boolean" },
            "supportsClear": { "type": "boolean" },
            "supportsPauseResume": { "type": "boolean" }
          }
        }
      }
    }
  }
}
