{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/009-roadmap-expansion/schemas/dirty-set.schema.json",
  "title": "DirtySet",
  "type": "object",
  "additionalProperties": false,
  "required": ["dirtyAll", "roots"],
  "properties": {
    "dirtyAll": {
      "type": "boolean",
      "description": "When true, indicates unknown writes or explicit full converge."
    },
    "roots": {
      "type": "array",
      "description": "Sorted unique normalized roots; empty array means no writes.",
      "items": { "$ref": "./field-path.schema.json" }
    }
  }
}

