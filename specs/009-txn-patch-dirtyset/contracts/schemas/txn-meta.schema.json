{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/009-txn-patch-dirtyset/schemas/txn-meta.schema.json",
  "title": "TxnMeta",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "moduleId",
    "instanceId",
    "txnSeq",
    "txnId",
    "origin",
    "startedAt",
    "endedAt",
    "durationMs",
    "outcome",
    "dirty",
    "patchSummary"
  ],
  "properties": {
    "moduleId": { "type": "string", "minLength": 1 },
    "instanceId": { "type": "string", "minLength": 1 },
    "txnSeq": { "type": "integer", "minimum": 0 },
    "txnId": { "type": "string", "minLength": 1 },
    "origin": { "$ref": "./txn-origin.schema.json" },
    "startedAt": { "type": "number" },
    "endedAt": { "type": "number" },
    "durationMs": { "type": "number", "minimum": 0 },
    "outcome": {
      "type": "string",
      "enum": ["committed", "aborted"],
      "description": "Transaction outcome. Stable failures must be aborted (no partial commit)."
    },
    "dirty": { "$ref": "./dirty-set.schema.json" },
    "patchSummary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["patchCount"],
      "properties": {
        "patchCount": { "type": "integer", "minimum": 0 }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "details": { "description": "Optional error details. Must be JSON-serializable and slim." }
      },
      "description": "Optional error information for aborted transactions. All fields must be serializable."
    },
    "degrade": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": { "type": "string", "minLength": 1 },
        "message": { "type": "string" }
      }
    },
    "snapshots": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "initial": {
          "description": "Optional initial snapshot (full diagnostics). Must be JSON-serializable and slim."
        },
        "final": { "description": "Optional final snapshot (full diagnostics). Must be JSON-serializable and slim." }
      }
    },
    "patches": {
      "type": "array",
      "items": { "$ref": "./patch.schema.json" }
    }
  }
}
