{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/010-form-api-perf-boundaries/schemas/list-scope-errors.schema.json",
  "title": "ListScopeErrors",
  "type": "object",
  "additionalProperties": false,
  "required": ["rows"],
  "properties": {
    "$list": {
      "$ref": "./error-value.schema.json",
      "description": "List-level (self) error slot. `$` prefix indicates reserved meta keys."
    },
    "rows": {
      "type": "array",
      "description": "Row-aligned errors. Items may be null to represent a hole (no errors / not present).",
      "items": {
        "anyOf": [
          { "type": "null" },
          {
            "type": "object",
            "description": "Row error object. `$rowId` anchors stable ownership; other keys are field-level errors.",
            "properties": {
              "$rowId": { "type": "string", "minLength": 1 }
            },
            "additionalProperties": { "$ref": "./error-value.schema.json" }
          }
        ]
      }
    }
  }
}
