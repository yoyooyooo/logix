{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProcessScope",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "appId"],
      "properties": {
        "type": { "const": "app" },
        "appId": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "moduleId", "instanceId"],
      "properties": {
        "type": { "const": "moduleInstance" },
        "moduleId": { "type": "string", "minLength": 1 },
        "instanceId": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "subtreeId"],
      "properties": {
        "type": { "const": "uiSubtree" },
        "subtreeId": { "type": "string", "minLength": 1 }
      }
    }
  ]
}
