{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProcessTriggerSpec",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "moduleId", "actionId"],
      "properties": {
        "kind": { "const": "moduleAction" },
        "name": { "type": "string", "minLength": 1 },
        "moduleId": { "type": "string", "minLength": 1 },
        "actionId": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "moduleId", "path"],
      "properties": {
        "kind": { "const": "moduleStateChange" },
        "name": { "type": "string", "minLength": 1 },
        "moduleId": { "type": "string", "minLength": 1 },
        "path": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "platformEvent"],
      "properties": {
        "kind": { "const": "platformEvent" },
        "name": { "type": "string", "minLength": 1 },
        "platformEvent": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "timerId"],
      "properties": {
        "kind": { "const": "timer" },
        "name": { "type": "string", "minLength": 1 },
        "timerId": { "type": "string", "minLength": 1 }
      }
    }
  ]
}
