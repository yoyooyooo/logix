{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/032-ui-projection-contract/schemas/ui-kit-registry.schema.json",
  "title": "UiKitRegistry",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion", "kitId", "components"],
  "properties": {
    "protocolVersion": { "type": "string", "enum": ["v1"] },
    "kitId": { "type": "string", "minLength": 1 },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["componentKey"],
          "properties": {
            "componentKey": { "type": "string", "minLength": 1 },
            "tier": { "type": "string", "enum": ["base", "ui", "pro", "unknown"] },
            "displayName": { "type": "string" },
            "description": { "type": "string" },
            "tags": { "type": "array", "items": { "type": "string" } },
            "dependencies": { "type": "array", "items": { "type": "string" } },
            "registryDependencies": { "type": "array", "items": { "type": "string" } },
          "props": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name"],
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "bindable": { "type": "boolean" },
                "required": { "type": "boolean" },
                "type": { "type": "string" },
                "description": { "type": "string" }
              }
            }
          },
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name"],
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "payloadType": { "type": "string" },
                "description": { "type": "string" }
              }
            }
          },
          "slots": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["name"],
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "description": { "type": "string" }
              }
            }
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "kind": { "type": "string", "enum": ["manual", "generated", "imd_registry"] },
              "componentId": { "type": "string" },
              "files": { "type": "array", "items": { "type": "string" } }
            }
          },
          "notes": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
        }
      }
    },
    "digest": { "type": "string" },
    "notes": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
  }
}
