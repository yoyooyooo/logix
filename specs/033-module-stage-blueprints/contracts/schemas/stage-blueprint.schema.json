{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/033-module-stage-blueprints/schemas/stage-blueprint.schema.json",
  "title": "StageBlueprint",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion", "stageId", "modules", "rules"],
  "properties": {
    "protocolVersion": { "type": "string", "enum": ["v1"] },
    "stageId": { "type": "string", "minLength": 1 },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["instanceId", "moduleId"],
        "properties": {
          "instanceId": { "type": "string", "minLength": 1 },
          "moduleId": { "type": "string", "minLength": 1 },
          "moduleRef": {
            "oneOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": ["kind", "moduleId"],
                "properties": {
                  "kind": { "type": "string", "const": "moduleId" },
                  "moduleId": { "type": "string", "minLength": 1 }
                }
              },
              {
                "type": "object",
                "additionalProperties": false,
                "required": ["kind", "specifier", "exportName"],
                "properties": {
                  "kind": { "type": "string", "const": "import" },
                  "specifier": { "type": "string", "minLength": 1 },
                  "exportName": { "type": "string", "minLength": 1 }
                }
              }
            ]
          },
          "config": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" },
          "meta": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
        }
      }
    },
    "rules": { "type": "array", "items": { "$ref": "./intent-rule.schema.json" } },
    "ui": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" },
    "notes": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
  }
}
