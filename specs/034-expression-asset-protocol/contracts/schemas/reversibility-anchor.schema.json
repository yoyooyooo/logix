{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/034-expression-asset-protocol/schemas/reversibility-anchor.schema.json",
  "title": "ReversibilityAnchor",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion"],
  "properties": {
    "protocolVersion": { "type": "string", "enum": ["v1"] },
    "description": { "type": "string" },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "ref"],
        "properties": {
          "kind": { "type": "string", "enum": ["spec", "ui", "generated", "unknown"] },
          "ref": { "type": "string", "minLength": 1 },
          "fingerprint": { "type": "string" }
        }
      }
    },
    "notes": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
  }
}
