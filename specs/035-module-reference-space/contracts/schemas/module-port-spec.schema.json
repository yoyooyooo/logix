{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/035-module-reference-space/schemas/module-port-spec.schema.json",
  "title": "ModulePortSpec",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion", "moduleId", "actions", "events", "outputs", "exports"],
  "properties": {
    "protocolVersion": { "type": "string", "enum": ["v1"] },
    "moduleId": { "type": "string", "minLength": 1 },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key"],
        "properties": {
          "key": { "type": "string", "minLength": 1 },
          "payloadType": { "type": "string" }
        }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key"],
        "properties": {
          "key": { "type": "string", "minLength": 1 },
          "payloadType": { "type": "string" }
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key"],
        "properties": {
          "key": { "type": "string", "minLength": 1 },
          "valueType": { "type": "string" }
        }
      }
    },
    "exports": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "valueType": { "type": "string" }
        }
      }
    },
    "digest": { "type": "string" },
    "notes": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
  }
}
