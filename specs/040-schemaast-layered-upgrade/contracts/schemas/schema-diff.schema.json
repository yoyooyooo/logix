{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://intent-flow.local/specs/040-schemaast-layered-upgrade/schemas/schema-diff.schema.json",
  "title": "SchemaDiff",
  "type": "object",
  "additionalProperties": false,
  "required": ["protocolVersion", "fromSchemaId", "toSchemaId", "breaking", "summary", "changes"],
  "properties": {
    "protocolVersion": { "type": "string", "enum": ["v1"] },
    "fromSchemaId": { "type": "string", "minLength": 1 },
    "toSchemaId": { "type": "string", "minLength": 1 },
    "breaking": { "type": "boolean" },
    "summary": { "type": "string", "minLength": 1 },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "message"],
        "properties": {
          "kind": { "type": "string", "minLength": 1 },
          "path": { "type": "string" },
          "message": { "type": "string", "minLength": 1 }
        }
      }
    },
    "notes": { "$ref": "../../../005-unify-observability-protocol/contracts/schemas/json-value.schema.json" }
  }
}
