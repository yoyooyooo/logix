{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://logix.dev/schemas/069/state-op.v1.schema.json",
  "title": "StateOpBlueprintV1",
  "oneOf": [
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "const": "assign" },
        "tag": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "const": "merge" },
        "tag": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "const": "push" },
        "tag": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 }
      }
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "const": "toggle" },
        "tag": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 }
      }
    }
  ]
}
