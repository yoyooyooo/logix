{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "vitest.config.ts",
    "vitest.shared.ts",
    "vitest.workspace.ts",
    "scripts/vite-js-to-ts-resolver.ts"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
